{
  "name": "@pionxzh/userscripts",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@7.12.2",
  "author": "pionxzh",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "cz": "cz",
    "clean": "rimraf ./dist",
    "release:ci": "cpy packages/**/dist/*.user.js dist --flat",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@pionxzh/eslint-config": "workspace:*",
    "@types/node": "^18.11.18",
    "commitizen": "^4.3.0",
    "cpy-cli": "^4.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "rimraf": "^4.1.2",
    "sass": "^1.57.1",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "pnpm exec eslint"
  }
}
